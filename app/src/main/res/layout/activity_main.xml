<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BBED6D">


    <ImageView
        android:id="@+id/sava"
        android:src="@drawable/sava"
        android:layout_marginTop="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/next"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/sava"
        app:layout_constraintEnd_toEndOf="@id/sava"
        app:layout_constraintStart_toStartOf="@id/sava"
        android:layout_marginTop="20sp"
        />








    <EditText
        android:id="@+id/username"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/reg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/green"
        android:background="@drawable/edit_text_background"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:hint="Username"

        />

    <EditText

        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Email"
       />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Password"
       />


    <TextView
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:text="REGISTER"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button

        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:background="@drawable/batton_background"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFFFF"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:text="NEXT"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />

    <ImageView
        android:src="@drawable/ic_baseline"
        android:layout_width="18pt"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/reg"
        app:layout_constraintBottom_toBottomOf="@id/reg"
        android:padding="4dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>